<Window x:Class="Kingdom_Hearts_2_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kingdom_Hearts_2_Launcher"
        mc:Ignorable="d"
        Title="Kingdom Hearts 2.8 Launcher"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Icon="Assets/khlauncherlogo.png"
        SnapsToDevicePixels="True"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="5">
            <StackPanel x:Name="Games">
                <RadioButton x:Name="khddd" Content="Kingdom Hearts Dream Drop Distance HD" IsChecked="True" Margin="0,2"/>
                <RadioButton x:Name="bbs02" Content="Kingdom Hearts 0.2: Birth by Sleep" Margin="0,2"/>
                <RadioButton x:Name="xbackcover" Content="Kingdom Hearts χ Back Cover (Movie)" Margin="0,2"/>
            </StackPanel>
            <StackPanel>
                <Button Content="Launch" Margin="0,5,0,0" Width="230" Height="25" FontWeight="Bold" Click="Launch_Click" IsDefault="True"/>
                <Button Content="Launcher Config" Margin="0,5, 0, 0" Width="230" Height="25" Click="LauncherConfigButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
